    "body-parser": "^1.17.2",
    "express": "^4.16.3",
    "i": "^0.3.6",
    "mongoose": "^5.0.11",
    "if-env": "^1.0.4"
  },
  "repository": "git@github.com:saogat/uhired.git"
}